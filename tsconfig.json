{
  "compilerOptions": {
    "target": "ES2015",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
        "api/*": ["./api/*"],
        "components/*": ["./components/*"],
        "context/*": ["./context/*"],
        "hooks/*": ["./hooks/*"],
        "layout/*": ["./layout/*"],
        "pages/*": ["./pages/*"],
        "test/*": ["./test/*"],
        "theme/*": ["./theme/*"],
        "utils/*": ["./utils/*"]
    }
  },
  "include": [
    "src"
  ]
}
